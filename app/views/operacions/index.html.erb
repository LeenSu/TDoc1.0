<h1>Listing operacions</h1>

<table>
  <thead>
    <tr>
      <th>Remitente</th>
      <th>Destinatario</th>
      <th>Descripcion</th>
      <th>Empleado</th>
      <th>Tipo oper</th>
      <th>Documento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operacions.each do |operacion| %>
      <tr>
        <td><%= operacion.remitente %></td>
        <td><%= operacion.destinatario %></td>
        <td><%= operacion.descripcion %></td>
        <td><%= operacion.empleado_id %></td>
        <td><%= operacion.tipo_oper_id %></td>
        <td><%= operacion.documento_id %></td>
        <td><%= link_to 'Show', operacion %></td>
        <td><%= link_to 'Edit', edit_operacion_path(operacion) %></td>
        <td><%= link_to 'Destroy', operacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Lista de areas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Titulo</th>
      <th>Sede</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.nombre %></td>
        <td><%= area.titulo %></td>
        <td><%= area.sede.nombre %></td>
        <td><%= link_to 'ver', area %></td>
        <td><%= link_to 'Editar', edit_area_path(area) %></td>
        <td><%= link_to 'Borrar', area, method: :delete, data: { confirm: 'estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Area', new_area_path %>

<h1>Lista de cargos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Titulo</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cargos.each do |cargo| %>
      <tr>
        <td><%= cargo.nombre %></td>
        <td><%= cargo.titulo %></td>
        <td><%= cargo.area.titulo %></td>
        <td><%= link_to 'Ver', cargo %></td>
        <td><%= link_to 'Editar', edit_cargo_path(cargo) %></td>
        <td><%= link_to 'Borrar', cargo, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cargo', new_cargo_path %>
